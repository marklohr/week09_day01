<!DOCTYPE html>
<html ng-app='Calculator'>
<head>
  <title>Calculator</title>
  <%= link href="css/bootstrap.min.css" rel="stylesheet" %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div ng-controller="CalculatorController">
    <input ng-change="onChangeValue()" ng-model="displayValue" type="text">
      <div>{{result}}</div>
      <button class="btn" ng-click="onClickClear()" type="button">C</button>
      <button class="btn" ng-click="onClickSum()" type="button">+</button>
      <button class="btn" ng-click="onClickSubtract()" type="button">-</button>
      <button class="btn" ng-click="onClickMultiply()" type="button">*</button>
      <button class="btn" ng-click="onClickDivide()" type="button">/</button>
      <button class="btn" ng-click="onClickCalculate()" type="button">
        <%= / Dependencies %>
      </button>
    </input>
  </div>
  <script src="js/angular.js" type="text/javascript"></script>
  <!-- App
  -->
  <script src="js/Calculator.js" type="text/javascript"></script>
</body>
